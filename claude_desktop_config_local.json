{
  "mcpServers": {
    "n8n-mcp": {
      "command": "node",
      "args": [
        "/home/n8n/n8n-mcp/dist/mcp/index.js"
      ],
      "env": {
        "MCP_MODE": "stdio",
        "MCP_LOG_LEVEL": "info",
        "NODE_ENV": "production",
        "NODE_DB_PATH": "/home/n8n/n8n-mcp/data/nodes.db",
        "REBUILD_ON_START": "false",
        "N8N_API_URL": "http://localhost:5678",
        "N8N_API_KEY": "your-n8n-api-key-here"
      }
    }
  }
}