# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_VERSION=v1

# Environment
REACT_APP_ENV=development

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=.json

# UI Configuration
REACT_APP_ITEMS_PER_PAGE=20
REACT_APP_DEFAULT_LANGUAGE=ja

# Feature Flags
REACT_APP_ENABLE_GOOGLE_TRANSLATE=true
REACT_APP_ENABLE_DEEPL=true
REACT_APP_ENABLE_ANALYTICS=false

# Public URLs
REACT_APP_SUPPORT_URL=https://support.example.com
REACT_APP_DOCS_URL=https://docs.example.com