# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://n8n_user:n8n_password@localhost:5432/n8n_localization
DB_HOST=localhost
DB_PORT=5432
DB_NAME=n8n_localization
DB_USER=n8n_user
DB_PASSWORD=n8n_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Translation API Keys
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key
DEEPL_API_KEY=your-deepl-api-key

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
S3_BUCKET_NAME=n8n-localization-workflows

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/json

# Translation Configuration
MAX_TRANSLATION_BATCH_SIZE=1000
TRANSLATION_CACHE_TTL=2592000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log